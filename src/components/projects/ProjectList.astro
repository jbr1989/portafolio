<style>
  /* .linear-grandient-1 {
    position: absolute;
    left: 0;
    top: 1px;
    width: 100%;
    height: 100%;
    background: linear-gradient(to top, rgba(1, 190, 150, 0.5), #000);
    z-index: 0;
  } */

  .section-projects {
    position: relative;
    /* background-color: #111111; */
    overflow: hidden;
  }

  .container-projects {
    position: relative;
    width: 90%;
    margin: 0 auto;
    max-width: 1355px;
  }
  .header-projects {
    position: relative;
    display: flex;
    justify-content: space-between;
    gap: 10px;
    width: 100%;
    color: #f6f6f9;
    scroll-margin-top: 80px;
  }

  .title-projects {
    font-size: 27px;
    font-weight: 800;
    margin: 0;
  }

  .ul-projects {
    position: relative;
    display: grid;
    place-items: center;
    padding: 40px 0;
    width: 100%;
    height: 100%;
  }
  .ul-projects a {
    text-decoration: none;
  }

  /* responsive */

  @media (min-width: 300px) {
    .ul-projects {
      grid-template-columns: 1fr;
      gap: 50px;
    }
  }
  @media (min-width: 700px) {
    .ul-projects {
      grid-template-columns: repeat(2, 1fr);
      gap: 30px;
    }
  }
  @media (min-width: 1200px) {
    .ul-projects {
      grid-template-columns: repeat(3, 1fr);
      justify-content: space-between;
    }
  }
</style>
